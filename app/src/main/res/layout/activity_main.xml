<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:background="@color/lightgray"
        android:gravity="bottom|end"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#000000"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonCE"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/darkgray"
                android:gravity="center"
                android:onClick="clearEntryOnClick"
                android:text="CE"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/buttonC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/darkgray"
                android:gravity="center"
                android:onClick="clearAllOnClick"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/buttonBS"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/darkgray"
                android:gravity="center"
                android:onClick="backspaceOnClick"
                android:text="BS"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/buttondivide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@color/darkgray"
                android:gravity="center"
                android:onClick="divisionOnClick"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/gainsboro"
                android:gravity="center"
                android:onClick="sevenOnClick"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/gainsboro"
                android:gravity="center"
                android:onClick="eightOnClick"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/gainsboro"
                android:gravity="center"
                android:onClick="nineOnClick"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/buttonmultiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@color/darkgray"
                android:gravity="center"
                android:onClick="multiplicationOnClick"
                android:text="x"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/gainsboro"
                android:gravity="center"
                android:onClick="fourOnClick"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/gainsboro"
                android:gravity="center"
                android:onClick="fiveOnClick"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/gainsboro"
                android:gravity="center"
                android:onClick="sixOnClick"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/buttonminus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@color/darkgray"
                android:gravity="center"
                android:onClick="subtractionOnClick"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/gainsboro"
                android:gravity="center"
                android:onClick="oneOnClick"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/gainsboro"
                android:gravity="center"
                android:onClick="twoOnClick"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/gainsboro"
                android:gravity="center"
                android:onClick="threeOnClick"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/buttonplus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@color/darkgray"
                android:gravity="center"
                android:onClick="additionOnClick"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonnegative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/darkgray"
                android:gravity="center"
                android:onClick="negativeOnClick"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/gainsboro"
                android:gravity="center"
                android:onClick="zeroOnClick"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/buttondot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/darkgray"
                android:gravity="center"
                android:onClick="dotOnClick"
                android:text="."
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />

            <Button
                android:id="@+id/buttonequal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@color/darkgray"
                android:gravity="center"
                android:onClick="equalOnClick"
                android:text="="
                android:textColor="@color/black"
                android:textSize="@dimen/calcButtonTextSize" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>